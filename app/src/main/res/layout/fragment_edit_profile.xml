<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="6dp"
                    android:visibility="gone">

                <RelativeLayout
                        android:id="@+id/btnDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/tvHeaderDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Update Profile"
                            android:textSize="20dp"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/sf_compact_text_bold"
                            android:layout_centerInParent="true"
                            android:padding="10dp"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="6dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/tvChangePassword"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/changePassword"
                                android:textSize="14dp"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/sf_compact_text_regular"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:padding="15dp"
                        />

                    </RelativeLayout>

                    <RelativeLayout
                            android:id="@+id/rlImage"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp">
                        <ImageView
                                android:id="@+id/ivDp"
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:src="@drawable/dp"/>
                        <ImageView
                                android:id="@+id/ivCamera"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/camera"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                />
                    </RelativeLayout>


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    style="@style/Zawajina.HomeTextView.Style"
                                    android:fontFamily="@font/sf_compact_display_bold"
                                    android:text="@string/name"
                                    android:textColor="@color/colorPrimary"/>

                            <EditText
                                    style="@style/Zawajina.HomeEditView.Style"
                                    android:id="@+id/tvName"
                                    android:fontFamily="@font/sf_compact_text_regular"
                                    android:text="tecnosols"/>
                        </LinearLayout>
                        <ImageView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/line"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    style="@style/Zawajina.HomeTextView.Style"
                                    android:fontFamily="@font/sf_compact_display_bold"
                                    android:text="@string/phone"
                                    android:textColor="@color/colorPrimary"/>

                            <EditText
                                    style="@style/Zawajina.HomeEditView.Style"
                                    android:id="@+id/tvPhone"
                                    android:fontFamily="@font/sf_compact_text_regular"
                                    android:text="1222 222 22 "/>
                        </LinearLayout>
                        <ImageView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/line"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    style="@style/Zawajina.HomeTextView.Style"
                                    android:fontFamily="@font/sf_compact_display_bold"
                                    android:text="@string/email_order"
                                    android:textColor="@color/colorPrimary"/>

                            <EditText
                                    style="@style/Zawajina.HomeEditView.Style"
                                    android:id="@+id/tvEmail"
                                    android:fontFamily="@font/sf_compact_text_regular"
                                    android:text="ayx@gmail.com"/>
                        </LinearLayout>
                        <ImageView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/line"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    style="@style/Zawajina.HomeTextView.Style"
                                    android:fontFamily="@font/sf_compact_display_bold"
                                    android:text="@string/DateOfBirth"
                                    android:textColor="@color/colorPrimary"/>

                            <EditText
                                    style="@style/Zawajina.HomeEditView.Style"
                                    android:id="@+id/tvDateOfBirth"
                                    android:fontFamily="@font/sf_compact_text_regular"
                                    android:text="YYYYMMDD"
                                    android:focusable="false"
                                    android:clickable="true"
                                    android:drawableRight="@drawable/dropdown_18_dark"
                                    android:drawableEnd="@drawable/dropdown_18_dark"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginEnd="10dp"
                            />
                        </LinearLayout>
                        <ImageView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/line"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    style="@style/Zawajina.HomeTextView.Style"
                                    android:fontFamily="@font/sf_compact_display_bold"
                                    android:text="@string/address_"
                                    android:textColor="@color/colorPrimary"/>

                            <EditText
                                    style="@style/Zawajina.HomeEditView.Style"
                                    android:id="@+id/tvAddress"
                                    android:fontFamily="@font/sf_compact_text_regular"
                                    android:text="ABCD"/>
                        </LinearLayout>
                        <ImageView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/line"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    style="@style/Zawajina.HomeTextView.Style"
                                    android:fontFamily="@font/sf_compact_display_bold"
                                    android:text="@string/cityy"
                                    android:textColor="@color/colorPrimary"/>

                            <EditText
                                    style="@style/Zawajina.HomeEditView.Style"
                                    android:id="@+id/tvCity"
                                    android:fontFamily="@font/sf_compact_text_regular"
                                    android:text="NY"/>
                        </LinearLayout>
                        <ImageView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/line"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    style="@style/Zawajina.HomeTextView.Style"
                                    android:fontFamily="@font/sf_compact_display_bold"
                                    android:text="@string/country_"
                                    android:textColor="@color/colorPrimary"/>

                            <EditText
                                    style="@style/Zawajina.HomeEditView.Style"
                                    android:id="@+id/tvCountry"
                                    android:fontFamily="@font/sf_compact_text_regular"
                                    android:text="Pakistan"/>
                        </LinearLayout>
                        <ImageView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/line"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp">

                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                <RelativeLayout
                        android:id="@+id/btnUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                    <TextView
                            android:id="@+id/your_ride_cancel"
                            style="@style/button_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_background"
                            android:text="@string/update"
                            android:textColor="@color/color_text_white"/>
                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>