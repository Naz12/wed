<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/home_item_background"
                        android:padding="1dp"
                        android:elevation="3dp">

                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="9dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <com.smarteist.autoimageslider.SliderLayout
                                    android:id="@+id/imageSlider"
                                    android:layout_width="match_parent"
                                    android:layout_height="160dp"
                                    android:scrollIndicators="bottom"
                            />


                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp">
                                <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.8"
                                        android:orientation="vertical"
                                        android:layout_centerVertical="true">

                                    <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                        <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                            <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content">

                                                <TextView
                                                        style="@style/Zawajina.HomeTextView.Style"
                                                        android:fontFamily="@font/sf_compact_display_bold"
                                                        android:text="@string/size_"
                                                        android:textColor="@color/colorPrimary"/>

                                                <TextView
                                                        android:id="@+id/tvSize"
                                                        style="@style/Zawajina.HomeTextView3.Style"
                                                        android:text="2000"
                                                        android:textSize="14dp"/>
                                            </LinearLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="5dp">

                                            <TextView
                                                    style="@style/Zawajina.HomeTextView.Style"
                                                    android:fontFamily="@font/sf_compact_display_bold"
                                                    android:text="@string/phoneNo_"
                                                    android:textColor="@color/colorPrimary"/>

                                            <TextView
                                                    android:id="@+id/category_phone_no"
                                                    style="@style/Zawajina.HomeTextView3.Style"
                                                    android:text="0324-4121448"
                                                    android:textSize="14dp"/>
                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:layout_marginTop="5dp">

                                        <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                            <TextView
                                                    style="@style/Zawajina.HomeTextView.Style"
                                                    android:fontFamily="@font/sf_compact_display_bold"
                                                    android:text="@string/address_"
                                                    android:textColor="@color/colorPrimary"/>

                                            <TextView
                                                    android:id="@+id/category_location"
                                                    style="@style/Zawajina.HomeTextView3.Style"
                                                    android:text="Amana Hall 101 Near Hassan Street New Samanabad Lahore"
                                                    android:textSize="14dp"

                                                    android:ellipsize="marquee"
                                                    android:singleLine="true"
                                                    android:marqueeRepeatLimit="marquee_forever"/>
                                        </LinearLayout>
                                    </LinearLayout>


                                </LinearLayout>

                                <RelativeLayout
                                        android:id="@+id/rlMap"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:layout_weight="0.2">

                                    <ImageView
                                            android:id="@+id/map_icon"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:src="@drawable/ic_google_maps_48"
                                            android:layout_alignParentBottom="true"
                                    />
                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginStart="20dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginRight="10dp">

                                    <TextView
                                            style="@style/Zawajina.HomeTextView.Style"
                                            android:fontFamily="@font/sf_compact_display_bold"
                                            android:text="@string/details_"
                                            android:textColor="@color/colorPrimary"/>

                                    <TextView
                                            android:id="@+id/tvDetails"
                                            style="@style/Zawajina.HomeTextView3.Style"
                                            android:layout_weight="2.7"
                                            android:text="أي رسالة ،"
                                            android:textSize="14dp"/>
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_item_background"
                    android:padding="1dp"
                    android:layout_marginTop="10dp">

                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="9dp"
                        android:elevation="5dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp">

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp">

                                <TextView
                                        android:id="@+id/tvAddBooking"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/colorPrimary"
                                        android:text="@string/add_booking"
                                        android:textSize="20dp"
                                        android:layout_centerVertical="true"
                                        android:fontFamily="@font/sf_compact_text_bold"/>


                                <LinearLayout
                                        android:id="@+id/llPerDayPrice"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Per Day"
                                            android:gravity="center"
                                            android:layout_gravity="center"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="12dp"/>
                                    <TextView
                                            android:id="@+id/tvBookingPrice"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="10000"
                                            android:gravity="center"
                                            android:layout_gravity="center"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="12dp"/>

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp">

                                <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:orientation="horizontal">

                                    <!--<TextView-->
                                            <!--android:layout_width="wrap_content"-->
                                            <!--android:layout_height="wrap_content"-->
                                            <!--android:fontFamily="@font/sf_compact_display_bold"-->
                                            <!--android:text="@string/account_no"-->
                                            <!--android:textColor="@color/colorPrimary"-->
                                            <!--android:layout_marginRight="10dp"/>-->

                                    <!--<TextView-->
                                            <!--android:id="@+id/tvBookingAccNo"-->
                                            <!--android:layout_width="wrap_content"-->
                                            <!--android:layout_height="wrap_content"-->
                                            <!--android:fontFamily="@font/sf_compact_text_regular"-->
                                            <!--android:text="412144477015"-->
                                            <!--android:textColor="@color/colorPrimary"/>-->
                                    <RatingBar
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/rating"
                                            android:rating="1"
                                            android:layout_marginTop="3dp"
                                            android:theme="@style/RatingBar"
                                            style="@style/Widget.AppCompat.RatingBar.Indicator"
                                            android:max="5"/>
                                </LinearLayout>
                            </RelativeLayout>
                            <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/colorPrimary"
                                    android:layout_marginTop="10dp"/>

                            <LinearLayout
                                    android:id="@+id/llSearch"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp">

                                    <TextView
                                            android:id="@+id/bookingDate"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/date"
                                            android:fontFamily="@font/sf_compact_display_bold"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="14dp"/>

                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="0"
                                            android:layout_toStartOf="@+id/no_of_days_text"
                                            android:layout_toLeftOf="@+id/no_of_days_text"
                                            android:id="@+id/tvNoOfDays"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="12dp"
                                            android:visibility="gone"/>
                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentRight="true"
                                            android:text=" Days"
                                            android:id="@+id/no_of_days_text"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="12dp"
                                            android:visibility="gone"/>

                                    <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/bookingDate"
                                            android:orientation="horizontal"
                                            android:weightSum="12"
                                            android:layout_marginTop="3dp">

                                        <TextView
                                                android:id="@+id/startdate"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="5.5"
                                                android:background="@drawable/current_item_background"
                                                android:drawableEnd="@drawable/dropdown_18_dark"
                                                android:drawableRight="@drawable/dropdown_18_dark"
                                                android:gravity="start"
                                                android:paddingLeft="10dp"
                                                android:paddingTop="5dp"
                                                android:paddingBottom="5dp"
                                                android:paddingRight="10dp"
                                                android:textColor="@color/text_color_black"
                                                android:hint="@string/select_start_date"
                                                android:textColorHint="@color/text_color_black"
                                                android:textSize="12sp"/>

                                        <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:padding="2dp"
                                                android:text="to"
                                                android:textColor="@color/colorPrimary"
                                                android:textSize="12dp"
                                                android:visibility="gone"/>

                                        <TextView
                                                android:id="@+id/enddate"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="5.5"
                                                android:background="@drawable/current_item_background"
                                                android:drawableRight="@drawable/dropdown_18_dark"
                                                android:drawableEnd="@drawable/dropdown_18_dark"
                                                android:gravity="start"
                                                android:paddingLeft="10dp"
                                                android:paddingTop="5dp"
                                                android:paddingBottom="5dp"
                                                android:paddingRight="10dp"
                                                android:hint="Select end date"
                                                android:textColorHint="@color/text_color_black"
                                                android:textColor="@color/text_color_black"
                                                android:textSize="12dp"
                                                android:visibility="gone"/>


                                    </LinearLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="10dp">

                                    <TextView
                                            android:id="@+id/tvTime"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/time"
                                            android:fontFamily="@font/sf_compact_display_bold"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="14dp"/>

                                    <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/tvTime"
                                            android:layout_marginTop="3dp">

                                        <Spinner
                                                android:id="@+id/spTime"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_toEndOf="@+id/searched_by"
                                                android:layout_toRightOf="@+id/searched_by"
                                                android:background="@drawable/spinner_background">
                                        </Spinner>

                                    </LinearLayout>

                                </RelativeLayout>
                            </LinearLayout>

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp">

                                <TextView
                                        android:id="@+id/tvType"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/booking_type"
                                        android:fontFamily="@font/sf_compact_display_bold"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14dp"/>


                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tvType"
                                        android:layout_marginTop="3dp">

                                    <Spinner
                                            android:id="@+id/spType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_toRightOf="@+id/searched_by"
                                            android:layout_toEndOf="@+id/searched_by"
                                            android:background="@drawable/spinner_background">
                                    </Spinner>

                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:visibility="gone">

                                <TextView
                                        android:id="@+id/tvStatus"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/status"
                                        android:fontFamily="@font/sf_compact_display_bold"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14dp"/>


                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tvStatus"
                                        android:layout_marginTop="3dp">

                                    <Spinner
                                            android:id="@+id/spStatus"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_toRightOf="@+id/searched_by"
                                            android:layout_toEndOf="@+id/searched_by"
                                            android:background="@drawable/spinner_background">
                                    </Spinner>

                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp">

                                <TextView
                                        android:id="@+id/tvTypeOfPayment"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/type_of_payment"
                                        android:fontFamily="@font/sf_compact_display_bold"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14dp"/>


                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tvTypeOfPayment"
                                        android:layout_marginTop="3dp">

                                    <Spinner
                                            android:id="@+id/spTypeOfPayment"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_toRightOf="@+id/searched_by"
                                            android:layout_toEndOf="@+id/searched_by"
                                            android:background="@drawable/spinner_background">
                                    </Spinner>

                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp">

                                <TextView
                                        android:id="@+id/tvService"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/service"
                                        android:fontFamily="@font/sf_compact_display_bold"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14dp"/>

                                <android.support.v7.widget.RecyclerView
                                        android:id="@+id/rvServices"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tvService">
                                </android.support.v7.widget.RecyclerView>

                            </RelativeLayout>

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="20dp">

                                <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:orientation="horizontal">

                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/sf_compact_display_bold"
                                            android:text="@string/total_amount"
                                            android:textColor="@color/colorPrimary"
                                            android:layout_marginRight="10dp"
                                            android:layout_marginEnd="10dp"
                                            android:textSize="16dp"/>

                                    <TextView
                                            android:id="@+id/tvAmount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/sf_compact_text_regular"
                                            android:text="0.0"
                                            android:textColor="@color/text_color_black"
                                            android:textSize="14dp"/>
                                </LinearLayout>
                            </RelativeLayout>

                        </LinearLayout>

                        <RelativeLayout
                                android:id="@+id/btnConfirmBooking"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:id="@+id/tvConfirmBooking"
                                    style="@style/button_style"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/current_button_background"
                                    android:text="@string/confirm_booking"
                                    android:textColor="@color/color_text_white"/>
                        </RelativeLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>