<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/rlConfirmationCancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="10dp">

        <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/cancel" />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rlConfirmationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_compact_display_bold"
                android:text="@string/confirmation"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp" />
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlConfirmationTitle"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        style="@style/Zawajina.HomeTextView.Style"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/sf_compact_display_bold"
                        android:text="@string/my_price"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="@color/colorPrimary" />

                <TextView
                        android:id="@+id/tvConfirmationPrice"
                        style="@style/Zawajina.HomeTextView3.Style"
                        android:fontFamily="@font/sf_compact_text_regular"
                        android:text="@string/my_price" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp">

            <TextView
                    style="@style/Zawajina.HomeTextView.Style"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/sf_compact_display_bold"
                    android:text="@string/payment_method"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/colorPrimary" />
            <LinearLayout
                    style="@style/Zawajina.HomeTextView3.Style"
                    android:orientation="vertical"
                    >

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rlTypeCash"
                        android:layout_marginBottom="15dp">

                    <TextView
                            style="@style/Zawajina.HomeTextView.Style"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/sf_compact_text_regular"
                            android:text="@string/cash"
                            android:textSize="14dp" />

                    <ImageView
                            android:id="@+id/tvCheckCash"
                            style="@style/Zawajina.HomeTextView.Style"
                            android:layout_width="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_weight="0"
                            android:src="@drawable/ic_check_primary_24dp"
                            android:visibility="visible" />

                </RelativeLayout>
                <RelativeLayout
                        android:id="@+id/rlTypeBank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp">

                    <TextView
                            style="@style/Zawajina.HomeTextView.Style"
                            android:layout_width="match_parent"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/sf_compact_text_regular"
                            android:text="@string/bank"
                            android:textSize="14dp" />

                    <ImageView
                            android:id="@+id/ivCheckBank"
                            style="@style/Zawajina.HomeTextView.Style"
                            android:layout_width="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_weight="0"
                            android:src="@drawable/ic_check_primary_24dp"
                            android:visibility="gone" />

                </RelativeLayout>
                <RelativeLayout
                        android:id="@+id/rlTypeCreditCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp">

                    <TextView
                            style="@style/Zawajina.HomeTextView.Style"
                            android:layout_width="match_parent"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/sf_compact_text_regular"
                            android:text="@string/credit_card"
                            android:textSize="14dp" />

                    <ImageView
                            android:id="@+id/ivCheckCredit"
                            style="@style/Zawajina.HomeTextView.Style"
                            android:layout_width="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_weight="0"
                            android:src="@drawable/ic_check_primary_24dp"
                            android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tvTermsAndCondition"
                        style="@style/Zawajina.HomeTextView3.Style"
                        android:fontFamily="@font/sf_compact_text_regular"
                        android:gravity="center"
                        android:text="@string/confirmation_terms_condition"
                        android:textColor="@color/red" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <CheckBox
                        android:id="@+id/cbTermsAndCondition"
                        style="@style/Zawajina.HomeTextView.Style"
                        android:fontFamily="@font/sf_compact_text_regular"
                        android:text="@string/accept_terms_and_condition"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvConfirm"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:text="@string/confirm"
                    android:textColor="@color/color_text_white" />

        </LinearLayout>
        >
    </LinearLayout>

</RelativeLayout>